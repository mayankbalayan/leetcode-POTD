Leetcode 342

LINK:- https://leetcode.com/problems/power-of-four/description/?envType=daily-question&envId=2025-08-15

class Solution {
public:
    bool isPowerOfFour(int n) {
        // iterative TLE
        // if(n<0) return false;
        // while(n%4==0){
        //     n/=4;
        // }
        // return n==1;

        // recursive
        if (n == 1) return true;
        if (n <= 0 || n % 4 != 0) return false;
        return isPowerOfFour(n / 4);
    }
};
