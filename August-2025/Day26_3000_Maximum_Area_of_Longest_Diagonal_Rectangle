3000. Maximum Area of Longest Diagonal Rectangle


https://leetcode.com/problems/maximum-area-of-longest-diagonal-rectangle/?envType=daily-question&envId=2025-08-26


class Solution {
public:
    int areaOfMaxDiagonal(vector<vector<int>>& dimensions) {
        int n = dimensions.size();

        int maxDaigonal = 0;
        int maxArea = 0;

        for(int i =0; i<n; i++){
            int length = dimensions[i][0];
            int width = dimensions[i][1];

            int daigonal = length * length + width * width;
            int area = length * width;

           if(daigonal > maxDaigonal){
            maxDaigonal = daigonal;
            maxArea = area;
           }
           else if(daigonal ==  maxDaigonal){
            maxArea = max(maxArea,area);
          }
        }
        return maxArea;
    }
};
